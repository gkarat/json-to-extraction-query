{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules"]
}