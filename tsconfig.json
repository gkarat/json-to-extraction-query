{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules", "typings"]
}